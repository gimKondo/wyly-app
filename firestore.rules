service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write;
    }
    // posts by others
    match /{path=**}/users/{userId}/posts/{postId} {
      allow read;
    }
    // posts by self
    match /{path=**}/users/{userId}/posts/{postId} {
      allow read, write: if userId == request.auth.uid;
    }
  }
}
