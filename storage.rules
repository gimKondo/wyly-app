service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth!=null;
    }
    // image by others
    match /{path=**}/{userId}/posts/{image} {
      allow read;
    }
    // posts by self
    match /{path=**}/{userId}/posts/{image} {
      allow read, write: if userId == request.auth.uid;
    }
  }
}
